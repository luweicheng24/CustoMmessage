<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_group_title"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="创建群组"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <EditText
        android:maxLength="15"
        android:background="@drawable/backgeound_shape"
        android:id="@+id/et_groups_name"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColorHint="#cccc"
        android:hint="群组名(长度小于15)"
        android:textSize="15sp"

        />

    <View
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:background="#cccc" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_groups_cancel"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#ccc" />

        <TextView
            android:id="@+id/tv_groups_confirm"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>