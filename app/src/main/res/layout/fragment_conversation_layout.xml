<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:background="@color/colorWhilte"
        android:id="@+id/lv_conversation"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:padding="5dp">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/ll_edit_globle"
        android:background="@drawable/backgeound_shape">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="visible"
                android:orientation="horizontal"
                >
            <Button
                android:id="@+id/but_edit"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/but_shape"
                android:text="编辑"
                android:textColor="@color/colorWhilte" />

            <Button
                android:id="@+id/but_newSms"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/but_shape"
                android:text="新建短信"
                android:textColor="@color/colorWhilte" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/but_allSelect"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/but_shape"
                    android:text="全选"
                    android:textColor="@color/colorWhilte" />

                <Button
                    android:id="@+id/but_cancel"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/but_shape"
                    android:text="取消选择"
                    android:textColor="@color/colorWhilte" />
                <Button
                    android:id="@+id/but_del"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/but_shape"
                    android:text="删除"
                    android:textColor="@color/colorWhilte" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
